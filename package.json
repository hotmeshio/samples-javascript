{
  "name": "samples-javascript",
  "version": "0.2.0",
  "description": "HotMesh LifeCycle Sandbox",
  "scripts": {
    "demo:js:hotmesh": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=5000 node demos/js/hotmesh/index.js",
    "demo:js:meshflow": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=5000 node demos/js/meshflow/index.js",
    "demo:js:meshcall": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=500 node demos/js/meshcall/index.js",
    "demo:js:meshdata": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=5000 node demos/js/meshdata/index.js",
    "demo:ts:hotmesh": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=5000 ts-node demos/ts/hotmesh/index.ts",
    "demo:ts:meshflow": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=5000 ts-node demos/ts/meshflow/index.ts",
    "demo:ts:meshcall": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=500 ts-node demos/ts/meshcall/index.ts",
    "demo:ts:meshdata": "NODE_ENV=test HMSH_SCOUT_INTERVAL_SECONDS=2 HMSH_BLOCK_TIME_MS=5000 ts-node demos/ts/meshdata/index.ts",
    "open:redis": "open http://localhost:8001",
    "docker:up": "npm run _copy_env_example; npm run _docker:build:up",
    "docker:up:dragonfly": "npm run _copy_env_example; npm run _docker:build:up:dragonfly",
    "docker:up:valkey": "npm run _copy_env_example; npm run _docker:build:up:valkey",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:logs:sandbox": "docker compose logs -f sandbox",
    "docker:logs:redis": "docker compose logs -f redis",
    "docker:reset-redis": "docker compose down -v && npm run docker:up",
    "docker:reset-redis:dragonfly": "docker compose down -v && npm run docker:up:dragonfly",
    "docker:reset-redis:valkey": "docker compose down -v && npm run docker:up:valkey",
    "docker:demo:js:hotmesh": "docker compose exec sandbox npm run demo:js:hotmesh",
    "docker:demo:js:meshflow": "docker compose exec sandbox npm run demo:js:meshflow",
    "docker:demo:js:meshcall": "docker compose exec sandbox npm run demo:js:meshcall",
    "docker:demo:js:meshdata": "docker compose exec sandbox npm run demo:js:meshdata",
    "docker:demo:ts:hotmesh": "docker compose exec sandbox npm run demo:ts:hotmesh",
    "docker:demo:ts:meshflow": "docker compose exec sandbox npm run demo:ts:meshflow",
    "docker:demo:ts:meshcall": "docker compose exec sandbox npm run demo:ts:meshcall",
    "docker:demo:ts:meshdata": "docker compose exec sandbox npm run demo:ts:meshdata",
    "_docker:build:up": "docker-compose up --build -d",
    "_docker:build:up:dragonfly": "docker-compose -f docker-compose.dragonflydb.yml up --build -d",
    "_docker:build:up:valkey": "docker-compose -f docker-compose.valkey.yml up --build -d",
    "_copy_env_example": "cp -n env.example .env"
  },
  "keywords": [
    "Redis",
    "ValKey",
    "DragonflyDB",
    "HotMesh",
    "Temporalio",
    "Durable Workflow",
    "Distributed Orchestration",
    "MeshData"
  ],
  "author": "luke.birdeau@gmail.com",
  "license": "Apache-2.0",
  "dependencies": {
    "@honeycombio/opentelemetry-node": "^0.7.2",
    "@hotmeshio/hotmesh": "^0.2.0",
    "@opentelemetry/auto-instrumentations-node": "^0.47.1",
    "@opentelemetry/sdk-node": "^0.52.1",
    "dotenv": "^16.4.5",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
